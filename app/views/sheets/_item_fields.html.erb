<div class="nested-fields">
  <div class="field p-0 m-0">
    <div class="row m-0">
      <div class="col-11 p-0">
        <%= f.text_field :text, class:'form-control', placeholder:'100文字以内',maxlength:'100', required: true %>
      </div>
      <div class="col-1 p-0 icon">
        <%= link_to_remove_association f, class: 'btn p-0 m-0' do%>
          <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="#FFFFFF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash-2">
            <polyline points="3 6 5 6 21 6"></polyline>
            <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
            <line x1="10" y1="11" x2="10" y2="17"></line>
            <line x1="14" y1="11" x2="14" y2="17"></line>
          </svg>
        <% end %> 
      </div>
    </div>
  </div>
</div>

<script>
  $(function() {
    // 見えないフォームHTML5でvalidationエラーのため
    $('form').find('text_field').removeAttr('required max min maxlength pattern');

});
</script>