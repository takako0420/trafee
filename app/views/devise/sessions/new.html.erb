<div class="container mw-md">
  <p class="fs-1 lh-lg text-center"><%= t('.sign_in') %></p>
  <%= render 'layouts/flash_messages' %>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= bootstrap_devise_error_messages! %>

    <div class="form-group mb-3">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control form-control-lg',placeholder:"例 ） trafee@com",required: true %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control form-control-lg',placeholder:"半角英数字6~30文字", required: true, minlength: @minimum_password_length, maxlength: '30' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group mb-3 form-check">
        <%= f.check_box :remember_me, class: 'form-check-input' %>
        <%= f.label :remember_me, class: 'form-check-label' do %>
          <%= resource.class.human_attribute_name('remember_me') %>
        <% end %>
      </div>
    <% end %>
    <div class="form-group mb-3">
      <div class="d-grid gap-2">
        <%= f.submit  t('.sign_in'), class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
  <% end %>

  <%= render 'devise/shared/links' %>
</div>