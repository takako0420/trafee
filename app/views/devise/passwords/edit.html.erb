<div class="card">
  <div class="card-body">
    <p class="fs-1 lh-lg text-center"><%= t('.change_your_password') %></p>

    <%= form_with model: @user, url: password_path(resource_name), method: :put, local: true do |f| %>
      <%= bootstrap_devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group mb-3">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control form-control-lg',placeholder:"半角英数字6~30文字", required: true, minlength: @minimum_password_length, maxlength: '30' %>
      </div>

      <div class="form-group mb-5">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: 'form-control form-control-lg',placeholder:"半角英数字6~30文字", required: true, minlength: @minimum_password_length, maxlength: '30' %>
      </div>

      <div class="form-group mb-3">
        <div class="d-grid gap-2">
          <%= f.submit t('.change_my_password'), class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>

    <%= render 'devise/shared/links' %>
  </div>
</div>

