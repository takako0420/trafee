<div class="card">
  <div class="card-body">
    <p class="fs-1 lh-lg text-center"><%= t('.resend_confirmation_instructions') %></p>

    <%= form_with model: @user, url: confirmation_path(resource_name), method: :post, local: true do |f| %>
      <%= bootstrap_devise_error_messages! %>

      <div class="form-group mb-5">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control form-control-lg',placeholder:"例 ） trafee@com",required: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
      </div>

      <div class="form-group mb-3">
        <div class="d-grid gap-2">
          <%= f.submit t('.resend_confirmation_instructions'), class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>

    <%= render 'devise/shared/links' %>
  </div>
</div>
